<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>View Candidates</title>
    <link rel="stylesheet" href="/css/view_candidates.css">
</head>

<body>
    <div id="header">
        <h1>All Registered Candidates</h1>
    </div>
    <div id="main">

        <!-- Presidents -->
        <h2>Presidential Candidates</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Party</th>
                </tr>
            </thead>
            <tbody>
                <% presidents.forEach(c=> { %>
                    <tr>
                        <td>
                            <%= c.CandidateID %>
                        </td>
                        <td>
                            <%= c.FirstName %>
                                <%= c.Surname %>
                        </td>
                        <td>
                            <%= c.PartyName || 'Independent' %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <!-- MPs -->
        <h2>Parliamentary Candidates</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Party</th>
                    <th>Constituency</th>
                </tr>
            </thead>
            <tbody>
                <% mps.forEach(c=> { %>
                    <tr>
                        <td>
                            <%= c.CandidateID %>
                        </td>
                        <td>
                            <%= c.FirstName %>
                                <%= c.Surname %>
                        </td>
                        <td>
                            <%= c.PartyName || 'Independent' %>
                        </td>
                        <td>
                            <%= c.ConstituencyName || 'N/A' %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <!-- Councillors -->
        <h2>Councillor Candidates</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Party</th>
                    <th>Ward</th>
                </tr>
            </thead>
            <tbody>
                <% councillors.forEach(c=> { %>
                    <tr>
                        <td>
                            <%= c.CandidateID %>
                        </td>
                        <td>
                            <%= c.FirstName %>
                                <%= c.Surname %>
                        </td>
                        <td>
                            <%= c.PartyName || 'Independent' %>
                        </td>
                        <td>
                            <%= c.WardName || 'N/A' %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <div class="back">
            <a href="/candidates">Back to Candidates</a>
        </div>
    </div>
</body>

</html>