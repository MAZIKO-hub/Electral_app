<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Register Candidate</title>
    <link rel="stylesheet" href="/css/add_candidates.css">
</head>

<body>
    <div id="header">
        <h1>Candidate Registration</h1>
    </div>
    <div id="main">
        <h2>Register New Candidate</h2>
        <form action="/candidates/add" method="POST">
            <fieldset>
                <legend>Personal Info</legend>
                <label for="nationalID">Select Person:</label><br>
                <select id="nationalID" name="nationalID" required>
                    <option value="" disabled selected>-- Select a Person --</option>
                    <% people.forEach(person => { %>
                    <option value="<%= person.NationalID %>">
                        <%= person.FirstName %> <%= person.Surname %> (ID: <%= person.NationalID %>)
                    </option>
                    <% }) %>
                </select><br><br>
            </fieldset>
            <fieldset>
                <legend>Party</legend>
                <label for="party">Select Party:</label><br>
                <select id="party" name="partyID" required>
                    <option value="">-- Select a Party --</option>
                    <% parties.forEach(party => { %>
                    <option value="<%= party.PartyID %>"><%= party.PartyName %></option>
                    <% }) %>
                </select><br><br>
            </fieldset>
            <fieldset>
                <legend>Position</legend>
                <label for="position">Select Position:</label><br>
                <select id="position" name="positionID" required>
                    <option value="">-- Select a Position --</option>
                    <% positions.forEach(pos => { %>
                    <option value="<%= pos.PositionID %>"><%= pos.Title %></option>
                    <% }) %>
                </select><br><br>
            </fieldset>

            <button type="submit">Register Candidate</button>
        </form>
        <div class="back">
            <a href="/candidates">Back to Candidates</a>
        </div>
    </div>
</body>

</html>